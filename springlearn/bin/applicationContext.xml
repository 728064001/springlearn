	<!-- 如下，为级联属性赋值  对象属性需要先初始化才能被级联赋值 -->
	<bean id="person" class="com.haolei.spring.Person">
		<constructor-arg value="haolei"></constructor-arg>
		<constructor-arg value="23"></constructor-arg>
		<constructor-arg ref="car2"></constructor-arg>
		<property name="car.price" value="3500000"></property>
	</bean> 
	
	<!-- 为集合属性赋值 -->
	<bean id="person3" class="com.haolei.collection.Person">
		<constructor-arg value="rose"></constructor-arg>
		<constructor-arg value="24"></constructor-arg>
		<constructor-arg>
			<list>
				<ref bean="car"/>
				<ref bean="car2"/>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="newperson" class="com.haolei.collection.NewPerson">
		<property name="name" value="haolei"></property>
		<property name="age" value="23"></property>
		<property name="cars">
			<map>
				<entry key="AA" value-ref="car"></entry>
				<entry key="BB" value-ref="car2"></entry>
			</map>
		</property>
		
