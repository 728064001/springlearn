<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="address" class="com.haolei.spel.Address">
		<property name="city" value="#{'hubei'}"></property>
		<property name="street" value="#{'jingshan'}"></property>
	</bean>
	<bean id="car" class="com.haolei.spel.Car">
		<constructor-arg value="bmw" index="0"></constructor-arg>
		<constructor-arg value="8000000"></constructor-arg>
		<constructor-arg value="#{T(java.lang.Math).PI*88}" index="2"></constructor-arg>
	</bean>
	
	<bean id="person" class="com.haolei.spel.Person">
		<property name="name" value="Haolei"></property>
		<property name="car" value="#{car}"></property>
		<property name="city" value="#{address.city}"></property>
		<property name="info" value="#{car.price > 3000000 ? '金领' : '白领'}"></property>
	</bean>
</beans>
